@using FishShelter.Models
@{
    string pic = "";
    RoomDetailModels room = new RoomDetailModels()
    {
        photoCount = 8,
        subTitle = "XXXXXXX，XXXXXX",
        roomFacilities = new List<string>()
        {
            "獨立景觀陽台×2",
            "泡澡浴缸",
            "沙發"
        }
    };
}
<script src="~/js/room.js"></script>
<div class="gray-bg">
    <div class="container">
        <div id="room-area1" class="room-padding col-lg-7 col-md-7 col-sm-12 col-xs-12">
            <div class="m-b-30 ma5slider inside-navs outside-dots horizontal-navs horizontal-dots anim-fade inside-dots autoplay"
                 data-tempo="4000">
                <div class="slides">
                    @for (int i = 1; i <= room.photoCount; i++)
                    {
                        {
                            pic = string.Format("/img/401/{0}.jpg", @i);
                        }
                        <img src="@pic" class="img room-pic white-border" style="">
                    }
                </div>
            </div>
            @Html.Partial("Common/_Tabs", room)
        </div>
        <div id="room-area2" class="room-padding col-lg-5 col-md-5 col-sm-12 col-xs-12 m-b-20">
            <h4 class="room-title m-t-10 p-b-20">
                <i class="fas fa-fish fa-sm"></i>401海景四人浴缸房
            </h4>
            <div class="m-t-20">
                起床就可以到陽台享受海景，配有一個超大衛浴，讓您在這享受渡假的時光。
            </div>
            <div class="m-t-20">
                人數：4人
                <br />
                景觀：4樓海景
                <br />
                平日：<span class="price">3,600元</span>
                <br />
                假日：<span class="price">5,000元</span>
            </div>
            @Html.Partial("~/Views/Room/Common/_Contact.cshtml")
        </div>
    </div>
</div>
